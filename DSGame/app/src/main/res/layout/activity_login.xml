<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.dsgame.activities.LoginActivity">

  <TextView
          android:text="Log In"
          android:layout_width="139dp"
          android:layout_height="61dp" android:id="@+id/tvLogin"
          android:textSize="48sp" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="92dp"/>
  <EditText
          android:layout_width="260dp"
          android:layout_height="44dp"
          android:inputType="textPersonName"
          android:text="Name"
          android:ems="10"
          android:id="@+id/username"
          app:layout_constraintTop_toBottomOf="@+id/tvLogin"
          android:layout_marginTop="132dp" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
  <EditText
          android:layout_width="260dp"
          android:layout_height="43dp"
          android:inputType="textPassword"
          android:ems="10"
          android:id="@+id/password"
          app:layout_constraintTop_toBottomOf="@+id/username"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"
          android:layout_marginTop="32dp"/>
  <ImageButton
          android:layout_width="139dp"
          android:layout_height="130dp" app:srcCompat="@drawable/login_button" android:id="@+id/btLogin"
          android:scaleX="0.5"
          android:scaleY="0.5" android:background="#00FFFFFF" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/password"
          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.459"
          app:layout_constraintVertical_bias="0.551"/>
</androidx.constraintlayout.widget.ConstraintLayout>