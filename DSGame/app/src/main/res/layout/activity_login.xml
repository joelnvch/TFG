<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.dsgame.activities.LoginActivity">

  <TextView
          android:text="Sign In"
          android:layout_width="234dp"
          android:layout_height="68dp"
          android:id="@+id/tvSignin"
          android:textSize="48sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:textColorHighlight="#0E0E0E"
          android:textColor="#000000" android:gravity="center" app:layout_constraintHorizontal_bias="0.497"
          app:layout_constraintBottom_toTopOf="@+id/etEmail" android:layout_marginBottom="116dp"/>
  <EditText
          android:layout_width="260dp"
          android:layout_height="44dp"
          android:inputType="textEmailAddress"
          android:ems="10"
          android:id="@+id/etEmail"
          android:hint="Email"
          android:autofillHints="emailAddress"
          android:backgroundTint="@android:color/holo_blue_dark"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.503" app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="37dp"/>

  <EditText
          android:layout_width="260dp"
          android:layout_height="43dp"
          android:hint="Password"
          android:autofillHints="password"
          android:inputType="textPassword"
          android:ems="10"
          android:backgroundTint="@android:color/holo_blue_dark"
          android:id="@+id/etPassword"
          app:layout_constraintTop_toBottomOf="@+id/etEmail"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.503"
          android:layout_marginTop="32dp"
          />

  <Button
          android:text="Sign Up"
          android:layout_width="130dp"
          android:layout_height="44dp"
          android:id="@+id/btSignup"
          app:backgroundTint="#000000"
          android:layout_marginTop="15dp"
          app:layout_constraintTop_toBottomOf="@+id/btLogin"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

  <Button
          android:layout_width="71dp"
          android:layout_height="69dp"
          android:id="@+id/btLogin"
          android:background="@drawable/signin_icon"
          android:scaleX="1.5"
          android:scaleY="1.5"
          app:backgroundTint="#101010"
          style="?android:attr/borderlessButtonStyle"
          app:layout_constraintTop_toBottomOf="@+id/etPassword"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="78dp"
          android:layout_marginEnd="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>