<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.dsgame.activities.MainActivity">

    <com.android.dsgame.view.HexButton
            android:layout_width="141dp"
            android:layout_height="134dp"
            android:id="@+id/hbCard1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="-4dp" android:layout_marginStart="-4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp">
    </com.android.dsgame.view.HexButton>
    <com.android.dsgame.view.HexButton
            android:layout_width="140dp"
            android:layout_height="134dp"
            android:id="@+id/hbCard2"
            app:layout_constraintStart_toEndOf="@+id/hbCard1"
            android:layout_marginLeft="-4dp" android:layout_marginStart="-4dp"
            app:layout_constraintTop_toTopOf="@+id/hbCard1">
    </com.android.dsgame.view.HexButton>
    <com.android.dsgame.view.HexButton
            android:layout_width="141dp"
            android:layout_height="134dp"
            android:id="@+id/hbCard3"
            app:layout_constraintStart_toEndOf="@+id/hbCard2" android:layout_marginLeft="-3dp"
            android:layout_marginStart="-3dp" app:layout_constraintTop_toTopOf="@+id/hbCard2">
    </com.android.dsgame.view.HexButton>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="413dp"
            android:layout_height="408dp"
            android:id="@+id/listaBotones"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Highest Value"
            android:layout_width="120dp"
            android:layout_height="30dp" android:id="@+id/textView"
            android:textSize="16sp" android:gravity="center"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <TextView
            android:text="Lowest Cost"
            android:layout_width="120dp"
            android:layout_height="30dp" android:id="@+id/textView2"
            android:textSize="16sp" android:gravity="center"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView3" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Best Cost/Value"
            android:layout_width="120dp"
            android:layout_height="30dp" android:id="@+id/textView3"
            android:textSize="16sp" android:gravity="center"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" app:layout_constraintTop_toTopOf="@+id/textView2"/>
    <TextView
            android:text="All Cards"
            android:layout_width="425dp"
            android:layout_height="26dp" android:id="@+id/textView5"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/hbCard1"
            app:layout_constraintEnd_toEndOf="parent" android:background="#4B431B1B"/>
</androidx.constraintlayout.widget.ConstraintLayout>