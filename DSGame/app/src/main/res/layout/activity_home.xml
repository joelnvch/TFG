<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.dsgame.activities.HomeActivity">

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:id="@+id/hb_black"
            android:layout_marginStart="-2dp"
            app:layout_constraintVertical_bias="0.52">
    </com.android.dsgame.view.CardElement>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginBottom="135dp"
            app:layout_constraintBottom_toBottomOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black"
            app:layout_constraintEnd_toEndOf="@+id/hb_black"
            android:id="@+id/hb_blue">

    </com.android.dsgame.view.CardElement>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp"
            app:layout_constraintEnd_toEndOf="@+id/hb_black"
            app:layout_constraintBottom_toBottomOf="@+id/hb_black"
            android:layout_marginBottom="64dp"
            android:id="@+id/hb_orange"/>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:id="@+id/hb_purple"
            android:layout_marginTop="71dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black"
            android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp"
            app:layout_constraintEnd_toEndOf="@+id/hb_black"/>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginTop="135dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black"
            app:layout_constraintEnd_toEndOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:id="@+id/hb_green"/>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:id="@+id/hb_yellow"
            app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/hb_black"
            android:layout_marginBottom="64dp"/>

    <com.android.dsgame.view.CardElement
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginTop="71dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:id="@+id/hb_red"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:srcCompat="@drawable/rectangle"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/history_icon"
            android:id="@+id/btHistory"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"/>

    <ImageView
            android:layout_width="46dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/logout_icon"
            android:id="@+id/btLogout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="4dp"/>

    <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            app:srcCompat="@android:drawable/ic_menu_save"
            android:id="@+id/btSave"
            android:tint="#0A0A0B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:id="@+id/etBoardName"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLength="20"
            app:layout_constraintBottom_toTopOf="@+id/hb_blue"
            app:layout_constraintEnd_toEndOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:text="Score: "
            android:layout_width="171dp"
            android:layout_height="26dp"
            android:id="@+id/tvScore"
            android:textSize="20sp"
            android:textColorHighlight="#0B0A0A"
            app:layout_constraintTop_toBottomOf="@+id/hb_black"
            android:layout_marginTop="168dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:textColor="#151414"/>

    <ImageView
            android:layout_width="26dp"
            android:layout_height="25dp"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/ivPen"
            app:layout_constraintStart_toStartOf="@+id/etBoardName"
            android:layout_marginStart="235dp"
            app:layout_constraintBottom_toBottomOf="@+id/etBoardName"
            android:layout_marginBottom="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>