<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                              android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="89dp" android:id="@+id/entryElement">

        <TextView
                android:text="TextView"
                android:layout_width="241dp"
                android:layout_height="35dp" android:id="@+id/tvName"
                android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvDate" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.636" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="240dp"
                android:layout_height="24dp" android:id="@+id/tvDate"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="17dp"/>
        <TextView
                android:text="Score:"
                android:layout_width="89dp"
                android:layout_height="25dp"
                android:textSize="20sp" android:gravity="center"
                android:id="@+id/tvScoreLiteral" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        <TextView
                android:layout_width="66dp"
                android:layout_height="25dp" android:id="@+id/tvScore"
                android:textSize="20sp" android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tvScoreLiteral"
                app:layout_constraintEnd_toEndOf="@+id/tvScoreLiteral"
                app:layout_constraintTop_toBottomOf="@+id/tvScoreLiteral" android:layout_marginTop="6dp"
                app:layout_constraintHorizontal_bias="0.391"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                tools:layout_editor_absoluteX="0dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>