<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="src.activities.MainActivity">


    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/hb_black"
            android:layout_marginLeft="-2dp" android:layout_marginStart="-2dp"
            app:layout_constraintVertical_bias="0.451">
    </view.HexButton>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp" android:layout_marginBottom="135dp"
            app:layout_constraintBottom_toBottomOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black" app:layout_constraintEnd_toEndOf="@+id/hb_black"
            android:id="@+id/hb_blue">
    </view.HexButton>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:layout_marginEnd="119dp" android:layout_marginRight="119dp"
            app:layout_constraintEnd_toEndOf="@+id/hb_black" app:layout_constraintBottom_toBottomOf="@+id/hb_black"
            android:layout_marginBottom="64dp" android:id="@+id/hb_orange"/>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:id="@+id/hb_purple" android:layout_marginTop="71dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black" android:layout_marginEnd="119dp"
            android:layout_marginRight="119dp" app:layout_constraintEnd_toEndOf="@+id/hb_black"/>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp" android:layout_marginTop="135dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black" app:layout_constraintEnd_toEndOf="@+id/hb_black"
            app:layout_constraintStart_toStartOf="@+id/hb_black" android:id="@+id/hb_green"/>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp"
            android:id="@+id/hb_yellow" app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/hb_black" android:layout_marginBottom="64dp"/>
    <view.HexButton
            android:layout_width="140dp"
            android:layout_height="135dp" android:layout_marginTop="71dp"
            app:layout_constraintTop_toTopOf="@+id/hb_black" app:layout_constraintStart_toStartOf="@+id/hb_black"
            android:layout_marginLeft="120dp" android:layout_marginStart="120dp" android:id="@+id/hb_red"/>


</androidx.constraintlayout.widget.ConstraintLayout>